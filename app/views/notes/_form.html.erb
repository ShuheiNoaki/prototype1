<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start_date, value="作付開始日（予定開始日）" %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :finished_date, value="作付終了日（目標終了日）" %><br>
    <%= f.date_select :finished_date %>
  </div>
  <div class="field">
    <%= f.label :field_id, value="圃場id" %><br>
    <%= f.number_field :field_id %>
  </div>
  <div class="field">
    <%= f.label :crop_id, value="栽培品目" %></br>
    <%= collection_check_boxes(:note, :crop_ids, Crop.all, :id, :name ) do |ff| %>
    <% ff.label{ ff.check_box + ff.text }%>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :crop_type_ids, value="品種" %></br>
    <%= collection_check_boxes(:note, :crop_type_ids, CropType.all, :id, :name ) do |ff| %>
    <% ff.label{ ff.check_box + ff.text }%>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit value="保存"%>
  </div>
<% end %>
