<p id="notice"><%= notice %></p>

<h1>農場一覧</h1>

<table>
  <thead>
    <tr>
      <th>農場名</th>
      <th>栽培面積</th>
      <th>生産地域</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @farms.each do |farm| %>
      <tr>
        <td><%= farm.farmname %></td>
        <td><%= farm.area %>ha</td>
        <td><%= farm.prefecture + farm.city %></td>
        <td><%= link_to '詳細', farm %></td>
        <td><%= link_to '編集', edit_farm_path(farm) %></td>
        <td><%= link_to '削除', farm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

