<p id="notice"><%= notice %></p>

<h1>あなたの作業記録一覧</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>タイトル</th>
      <th>記録内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.date %></td>
        <td><%= memo.title %></td>
        <td><%= memo.datail %></td>
        <td><%= link_to '続きを見る', memo %></td>
        <td><%= link_to '削除', memo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '作業記録を新規作成', new_memo_path %>
