<p id="notice"><%= notice %></p>

<!-- 圃場情報ボードのタイトル -->
<div class="field-board-title">
	<h2><%= @field.name %>の記録帳一覧</h2>

	<div class="btn-edit">
		<%= link_to '圃場情報の編集', edit_field_path(@field) %> 
	</div>
</div>

<!-- 圃場情報の説明 -->
<div class="field-detail">
	<p>
	  <strong>栽培面積：</strong>
	  <%= @field.area %>ha
	</p>
	<p>
	  <strong>説明:</strong>
	  <%= @field.detail %>
	</p>
</div>

<!-- 記録帳 -->
<div class="note-block-board">
  <% @notes.each do |note| %>
    <div class="note-block">
          <div class="crop-name">
              <% note.crops.each do |crop| %>
                <%= crop.name %>
              <% end %>
              >>
              <% note.crop_types.each do |type| %>
                <%= type.name %>
              <% end %>
          </div>
          <div class="note-detail">
            <%= link_to '詳しく見る', note %>
          </div>
          <div class="note-delete">
            <%= link_to '削除', note, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
    </div>
  <% end %>
  <div class="note-block">
    <%= link_to '記録帳を新規作成', new_note_path %>
  </div> 
</div>

<br>
<%= link_to '戻る', fields_path %>
